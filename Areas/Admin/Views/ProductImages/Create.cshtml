@model ProductImagesCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create Product images</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ImagePath"></label>
                <input asp-for="ImagePath" class="form-control">
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId">Products</label>
                <select class="form-control" asp-for="ProductId" asp-items='@new SelectList(ViewBag.Products,"Id","Name")'>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <button class="btn btn-success">Submit</button>
            <button asp-action="Index" class="btn btn-cancel">Cancel</button>
        </form>
    </div>
</div>