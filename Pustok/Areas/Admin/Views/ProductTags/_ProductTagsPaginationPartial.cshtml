@using WebApplication1.ViewModels.CommonVM
@using WebApplication1.ViewModels.ProductTagsVM
@model PaginationVM<IEnumerable<ProductTagsListItemVM>>

<nav aria-label="Page navigation example">
    <ul id="prod-pag" class="pagination">
        <li class="page-item @(Model.HasPre ? "" : "disabled")"><a class="page-link" asp-action="ProductTagsPagination" asp-route-page="@(Model.CurrentPage - 1)" asp-route-count="2">Previous</a></li>
        @for (int i = 1; i <= Model.LastPage; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" asp-action="ProductTagsPagination" asp-route-page="@i" asp-route-count="2">@i</a></li>
        }
        <li class="page-item @(Model.HasNext ? "" : "disabled")"><a class="page-link" asp-action="ProductTagsPagination" asp-route-page="@(Model.CurrentPage + 1)" asp-route-count="2">Next</a></li>
    </ul>
</nav>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary text-center">ProductTags</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <th>Id</th>
                <th>TagId</th>
                <th>ProductId</th>
                <th colspan="2">Action</th>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.TagId</td>
                            <td>@item.ProductId</td>
                            <td><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a> </td>
                            <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>