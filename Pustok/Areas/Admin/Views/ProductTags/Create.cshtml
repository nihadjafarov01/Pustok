@using WebApplication1.ViewModels.ProductTagsVM

@model ProductTagsCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create ProductTags</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="TagId">Tags</label>
                <select class="form-control" asp-for="TagId" asp-items='@new SelectList(ViewBag.Tags,"Id","Title")'>
                    <option value="none" disabled selected>Select author</option>
                </select>
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId">Blogs</label>
                <select class="form-control" asp-for="ProductId" asp-items='@new SelectList(ViewBag.Products,"Id","Name")'>
                    <option value="none" disabled selected>Select author</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <button class="btn btn-success">Submit</button>
            <button asp-action="Index" class="btn btn-cancel">Cancel</button>
        </form>
    </div>
</div>