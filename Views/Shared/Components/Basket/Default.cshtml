﻿@using WebApplication1.ViewModels.BasketVM

@model List<BasketProductItemVM>

<div class="cart-block">
    <div class="cart-total">
        <span class="text-number">
            @Model.Sum(x=>x.Count)
        </span>
        <span class="text-item">
            Shopping Cart
        </span>
        <span class="price">
            £@Model.Sum(p=> p.Count * p.Price)
            <i class="fas fa-chevron-down"></i>
        </span>
    </div>
    <div class="cart-dropdown-block">
        @foreach (var item in Model)
        {
            <div class=" single-cart-block ">
                <div class="cart-product">
                    <a href="product-details.html" class="image">
                        <img src="~/@item.ImageUrl" alt="">
                    </a>
                    <div class="content">
                        <h3 class="title">
                            <a href="product-details.html">
                                @item.Name
                            </a>
                        </h3>
                        <p class="price"><span class="qty">@item.Count ×</span> £@item.Price</p>
                        <button class="cross-btn"><a asp-action="RemoveBasket" asp-controller="Product" asp-route-id="@item.Id" class="fas fa-times" id="remove-cart"></a></button>
                    </div>
                </div>
            </div>
        }
        <div class=" single-cart-block ">
            <div class="btn-block">
                <a asp-action="Cart" asp-controller="Home" class="btn">
                    View Cart <i class="fas fa-chevron-right"></i>
                </a>
                <a href="checkout.html" class="btn btn--primary">
                    Check Out <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
