@model IEnumerable<SliderListItemVM>
 
<section class="hero-area hero-slider-1">
    <div class="sb-slick-slider" data-slick-setting='{
                            "autoplay": true,
                            "fade": true,
                            "autoplaySpeed": 3000,
                            "speed": 3000,
                            "slidesToShow": 1,
                            "dots":true
                            }'>
        @foreach (var slider in Model)
        {
            <div class="single-slide bg-shade-whisper  ">
                <div class="container">
                    <div class="home-content text-center">
                        <div class="hero-partial-image">
                            <img src="@slider.ImageUrl" alt="">
                        </div>
                        <div class="">
                            <div class="text-@(slider.IsLeft == true ? "left" : slider.IsLeft == false ? "right" : "center" )">
                                <h1>@slider.Title</h1>
                                <h2>@slider.Text</h2>
                                <a href="shop-grid.html" class="btn btn-outlined--primary">
                                    Order Now!
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
